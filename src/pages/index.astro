---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPosts, formatDate } from '../lib/posts';

const posts = await getPosts();
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Soul2Soul â€” Home" description="A modern, fast, minimal blog built with Astro and Tailwind.">

  <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Latest posts</h2>
    <ul class="grid grid-cols-1 gap-6 max-w-2xl mx-auto">
      {
        posts.map((post) => (
          <li class="group rounded-xl border border-neutral-800 bg-[#0a0a0a] hover:border-neutral-700 transition-colors overflow-hidden max-h-[200px]">
            <a href={`${base}posts/${(post.data.slug ?? post.slug)}/`} class="flex flex-col sm:flex-row items-stretch gap-4">
              {post.data.coverImage && (
                <img
                  src={post.data.coverImage.startsWith('/') ? `${base}${post.data.coverImage.slice(1)}` : `${base}${post.data.coverImage}`}
                  alt={post.data.coverAlt ?? post.data.title}
                  class="w-full h-36 object-cover border-b border-neutral-800 sm:w-32 md:w-40 sm:h-full sm:border-b-0 sm:border-r"
                  loading="lazy"
                  decoding="async"
                />
              )}
              <div class="p-4 md:p-5 flex-1">
              <h3 class="text-lg md:text-xl font-semibold text-white group-hover:underline line-clamp-2">
                {post.data.title}
              </h3>
              <p class="mt-2 text-sm md:text-base text-white line-clamp-2">
                {post.data.description}
              </p>
              <div class="mt-3 flex items-center justify-between">
                <time class="text-xs text-white">
                  {formatDate(post.data.date)}
                </time>
              </div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
