---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page not found — Soul2Soul" description="The page you’re looking for doesn’t exist.">
  <section class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-20 text-center">
    <p class="text-sm font-medium text-neutral-600 dark:text-neutral-400">404</p>
    <h1 class="mt-2 text-3xl sm:text-4xl font-bold tracking-tight text-neutral-900 dark:text-white">
      Page not found
    </h1>
    <p class="mt-3 text-neutral-600 dark:text-neutral-300">
      Sorry, we couldn’t find the page you’re looking for.
    </p>
    <div class="mt-8">
      <a href={import.meta.env.BASE_URL} class="inline-flex items-center rounded-md bg-neutral-900 px-4 py-2 text-white hover:bg-black dark:bg-white dark:text-neutral-900 dark:hover:bg-neutral-200 text-sm font-medium">
        Go back home
      </a>
    </div>
  </section>
</BaseLayout>
