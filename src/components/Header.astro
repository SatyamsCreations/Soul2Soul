---
import ThemeToggle from './ThemeToggle.astro';

const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
];

const base = import.meta.env.BASE_URL;
---

<header class="sticky top-0 z-40 bg-brand-600/85 dark:bg-brand-700/85 backdrop-blur supports-[backdrop-filter]:bg-brand-600/75 dark:supports-[backdrop-filter]:bg-brand-700/75 text-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href={base} class="font-semibold text-lg tracking-tight text-white">Soul2Soul</a>

    <nav class="hidden md:flex items-center gap-6">
      {
        links.map((l) => (
          <a href={`${base}${l.href.slice(1)}`} class="text-sm text-white/90 hover:text-white">{l.label}</a>
        ))
      }
      <a href={`${base}search`} class="text-sm text-white/90 hover:text-white">Search</a>
      <ThemeToggle />
    </nav>

    <button class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-white hover:bg-white/10" aria-label="Open menu" id="open-menu">
      <svg viewBox="0 0 24 24" fill="none" class="h-6 w-6" aria-hidden="true">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4 7h16M4 12h16M4 17h16" />
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class="md:hidden hidden border-t border-brand-500/40 bg-neutral-950">
    <div class="px-4 py-3 space-y-3">
      {
        links.map((l) => (
          <a href={`${base}${l.href.slice(1)}`} class="block text-sm text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">{l.label}</a>
        ))
      }
      <div class="flex items-center justify-between">
        <span class="text-sm text-neutral-700 dark:text-neutral-300">Theme</span>
        <ThemeToggle />
      </div>
      <a href={`${base}search`} class="text-sm text-neutral-700 hover:text-black dark:text-neutral-300 dark:hover:text-white">Search</a>
    </div>
  </div>

  <script is:inline>
    const openBtn = document.getElementById('open-menu');
    const menu = document.getElementById('mobile-menu');
    openBtn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  </script>
</header>
