---

const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
];

const base = import.meta.env.BASE_URL;
---

<header class="sticky top-0 z-40 bg-[#5d169c] text-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href={base} class="font-bold text-[2rem] tracking-tight text-white">Soul2Soul</a>

    <nav class="hidden md:flex items-center gap-6">
      {
        links.map((l) => (
          <a href={`${base}${l.href.slice(1)}`} class="text-base text-white/90 hover:text-white">{l.label}</a>
        ))
      }
      <a href={`${base}search`} class="text-base text-white/90 hover:text-white">Search</a>
    </nav>

    <button class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-white hover:bg-white/10" aria-label="Open menu" id="open-menu">
      <svg viewBox="0 0 24 24" fill="none" class="h-6 w-6" aria-hidden="true">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4 7h16M4 12h16M4 17h16" />
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class="md:hidden hidden border-t border-[#5d169c] bg-[#5d169c]">
    <div class="px-4 py-3 space-y-3">
      {
        links.map((l) => (
          <a href={`${base}${l.href.slice(1)}`} class="block text-base text-white hover:text-white/90">{l.label}</a>
        ))
      }
      <a href={`${base}search`} class="text-base text-white hover:text-white/90">Search</a>
    </div>
  </div>

  <script is:inline>
    const openBtn = document.getElementById('open-menu');
    const menu = document.getElementById('mobile-menu');
    openBtn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  </script>
</header>
